# Production Environment Configuration
VITE_APP_NAME=PokerDoritos
VITE_APP_VERSION=1.0.0

# API Configuration (Update these for production deployment)
VITE_API_URL=https://api.PokerDoritos.com/api
VITE_SOCKET_URL=https://game.PokerDoritos.com

# Server Endpoints
VITE_MASTER_SERVER_URL=https://api.PokerDoritos.com
VITE_DEDICATED_SERVER_URL=https://game.PokerDoritos.com
VITE_AI_SERVER_URL=https://ai.PokerDoritos.com

# Feature Flags
VITE_ENABLE_DEV_TOOLS=false
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=true

# Game Configuration
VITE_DEFAULT_POKER_VARIANT=texas-holdem
VITE_MAX_PLAYERS_PER_TABLE=9
VITE_DEFAULT_ACTION_TIMEOUT=30

# UI Configuration
VITE_DEFAULT_THEME=dark
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_SOUND=true

# Production Settings
VITE_MOCK_API=false
VITE_BYPASS_AUTH=false
VITE_DEBUG_SOCKET=false