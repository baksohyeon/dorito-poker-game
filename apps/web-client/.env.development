# Development Environment Configuration
VITE_APP_NAME=PokerDoritos
VITE_APP_VERSION=1.0.0

# API Configuration
VITE_API_URL=http://localhost:3000/api
VITE_SOCKET_URL=http://localhost:3001

# Server Endpoints
VITE_MASTER_SERVER_URL=http://localhost:3000
VITE_DEDICATED_SERVER_URL=http://localhost:3001
VITE_AI_SERVER_URL=http://localhost:3002

# Feature Flags
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_ERROR_REPORTING=true

# Game Configuration
VITE_DEFAULT_POKER_VARIANT=texas-holdem
VITE_MAX_PLAYERS_PER_TABLE=9
VITE_DEFAULT_ACTION_TIMEOUT=30

# UI Configuration
VITE_DEFAULT_THEME=dark
VITE_ENABLE_ANIMATIONS=true
VITE_ENABLE_SOUND=true

# Development Settings
VITE_MOCK_API=false
VITE_BYPASS_AUTH=false
VITE_DEBUG_SOCKET=false